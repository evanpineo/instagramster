<!DOCTYPE html>
<html>
  <head>
    <title>Instagramster</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navMenu" aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'Instagramster', root_path, class: "navbar-brand" %>
      <div class="collapse navbar-collapse" id="navMenu">
        <div class="navbar-nav text-center">
          <a class="nav-item nav-link" href="#">Features</a>
          <% if current_user %>
            You're signed in as <%= current_user.email %>.
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-item nav-link" %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "nav-item nav-link" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-item nav-link" %>
          <% end %>
        </div>
      </div>
    </nav>
    
    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>  
    <% end %>
    
    <%= yield %>
  </body>
</html>
